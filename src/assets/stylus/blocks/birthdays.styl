.birthdays {
    width (1200/1920*100)%
    position relative
    &:before {
        content ''
        width (1180/1200*100)%
        height 1px
        background #E4E4E4
        position absolute
        top -60px
        left ((1200 - 1180)/1200*100/2)%
        @media screen and (max-width: 1200px) {
            top -36px
        }
    }
    @media screen and (max-width: 1440px) {
        width (70/(1180/1200))%
    }
    &__heading {
        margin 30px 0 36px
        padding-left 10px
        @media screen and (max-width: 1200px) {
            margin-bottom 22px
            padding-left 6px
        }
    }
    &__title {
        font-family $Roboto
        font-size $textLg
        font-weight 700
        line-height $textLg + 10px
        color $darkText
        margin 0
        display inline-block
        position relative
        &:after {
            content ''
            background url('/assets/img/petard.png') center center no-repeat
            background-size contain
            position absolute
            right -50px
            bottom -2px
            width 40px
            height @width
            @media screen and (max-width: 1200px) {
                width 30px
                height @width
                right -40px
                bottom 0
            }
        }
        @media screen and (max-width: 1200px) {
            font-size @font-size - 6px
            line-height @line-height - 6px
        }
    }
    &__subtitle {
        font-family $SSP
        font-weight 400
        font-size $textSm
        line-height $textSm + 6px
        font-weight 400
        color $grayText
        margin 0
        @media screen and (max-width: 1200px) {
            font-size @font-size - 2px
            line-height @line-height - 2px
        }
    }
    &__grid {
        display flex
        flex-wrap wrap
        justify-content flex-start
        width 100%
    }
    &__card {
        flex-basis (280/1200*100)%
        margin 0 (10/1200*100)% (16/1200*100)% (10/1200*100)%
        max-width (280/1200*100)%
    }
}