.page {
    position relative
    width 100%
    min-width 1024px
    margin 0
    min-height 100vh
    display flex
    flex-direction column
    &__content {
        flex 1 0 auto
    }
    &__footer {
        flex 0 0 auto
        margin-top 40px
    }
    &__news {
        margin-bottom 16px
    }
    &__feedback {
        margin-top 118px
    }
    &__birthdays {
        margin 112px auto 0
        @media screen and (max-width: 1200px) {
            margin-top 80px
        }
    }
}