.welcome {
    width 100%
    position relative
    &:before {
        content ''
        position absolute
        width 100%
        background $lightGrayBackground
        bottom 0
        height (201/468*100)%
        @media screen and (max-width: 1440px) {
            height 18%
        }
    }
    &__inner {
        width (1180/1920*100)%
        height 468px
        margin 0 auto
        display flex
        justify-content space-between
        border-bottom 1px solid #E4E4E4
        box-sizing border-box
        padding-bottom 48px
        position relative
        &:before
        &:after {
            content ''
            position absolute
            width 100px
            background url('/assets/img/dots.png') center center repeat-y
            background-size contain
            bottom 48px
            @media screen and (max-width: 1440px) {
                bottom 34px
            }
        }
        &:before {
            height 100px
            left 0
            @media screen and (max-width: 1440px) {
                width 75px
                height @width
            }
        }
        &:after {
            height 300px
            right -83px
            @media screen and (max-width: 1440px) {
                width 75px
                height @width * 3
                right -67px
            }
        }
        @media screen and (max-width: 1440px) {
            width 70%
            height 370px
            padding-bottom 34px
        }
    }
    &__info {
        padding-top 24px
        flex-basis 42.3%
        position relative
        &:after {
            content ''
            position absolute
            width 200px
            height 100px
            background url('/assets/img/dots.png') center center repeat-x
            background-size contain
            bottom 0
            left 43.5%
            @media screen and (max-width: 1440px) {
                height 75px
                width 150px
                left 48.5%
            }
        }
        @media screen and (max-width: 1440px) {
            padding-top 10px
        }
    }
    &__title {
        font-family $Roboto
        font-weight 700
        font-size $textXl
        color $darkText
        line-height $textXl + 4px
        margin 1em 0 .2em
        width 130%
        position relative
        z-index 20
        &:before {
            content ''
            width 120px
            height 1px
            background $mainPink
            position absolute
            left -31.5%
            top 28%
            @media screen and (max-width: 1440px) {
                left -27%
            }
            @media screen and (max-width: 1200px) {
                width 80px
            }
        }
        @media screen and (max-width: 1440px) {
            font-size @font-size - 8px
            line-height @line-height - 10px
            width 150%
        }
    }
    &__subtitle {
        font-family $SSP
        font-weight 400
        font-size $textSm
        line-height $textSm + 6px
        color $grayText
        margin 0
        @media screen and (max-width: 1440px) {
            font-size @font-size - 2px
            line-height @line-height - 2px
        }
    }
    &__img {
        background url('/assets/img/welcome__img.png') right top no-repeat
        background-size cover
        flex-basis 57.7%
        position relative
        z-index 10
        &:before {
            content ''
            background $lightGrayBackground
            width 100px
            height 320px
            position absolute
            top 0
            left -100px
            @media screen and (max-width: 1440px) {
                height 270px
                width 75px
                left -75px
            }
        }
        &:after {
            content ''
            background $mainPink
            width 100px
            height @width
            position absolute
            bottom 0
            left - @width
            @media screen and (max-width: 1440px) {
                width 75px
                height 75px
                left -75px
            }
        }
    }
}