.button {
    font-family $SSP
    font-weight 400
    font-size $textXs
    text-decoration none
    height 46px
    text-align center
    cursor pointer
    box-sizing border-box
    &:focus {
        outline none
    }
    @media screen and (max-width: 1440px) {
        height @height - 10px
        font-size @font-size - 2px
    }
}

.button_background_pink {
    background $mainPink
    color #FFFFFF
}