.footer {
    width 100%
    border-top 1px solid #EFEFEF
    &__inner {
        width (1180/1920*100)%
        margin 0 auto
        display flex
        justify-content space-between
        align-items center
        height 105px
        @media screen and (max-width: 1440px) {
            width 70%
        }
        @media screen and (max-width: 1200px) {
            height 75px
        }
    }
    &__copy {
        font-family $SSP
        font-size $textXs
        line-height $textXs + 6px
        font-weight 400
        color $lightText
        margin-top -8px
        @media screen and (max-width: 1200px) {
            font-size @font-size - 2px
            line-height @line-height - 2px
            margin-top -4px
        }
    }
    &__logos {
        display flex
        justify-content flex-end
    }
    &__link {
        margin-right 58px
        &:last-child {
            margin-right 0
        }
        @media screen and (max-width: 1200px) {
            margin-right 30px
        }
    }
    &__logo {
        width auto
    }
    &__logo_scad {
        height 26px
        @media screen and (max-width: 1200px) {
            height 18px
        }
    }
    &__logo_nexus
    &__logo_ack {
        height 30px
        @media screen and (max-width: 1200px) {
            height 20px
        }
    }
}