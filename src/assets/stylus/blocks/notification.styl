.notification {
    background $mainPink
    width 100%
    position relative
    &__inner {
        display flex
        justify-content space-between
        align-items center
        width (1180/1920*100)%
        height 120px
        margin 0 auto
        @media screen and (max-width: 1440px) {
            height 90px
            width 70%
        }
    }
    &__inner_icon_document {
        position relative
        &:before {
            content ''
            width 11%
            min-height 72%
            background url('/assets/img/document.png') center bottom no-repeat
            background-size contain
            position absolute
            left -15.5%
            bottom 0
            @media screen and (max-width: 1440px) {
                width 14%
                left -17%
            }
        }
    }
    &__info {
        display flex
        flex-direction column
        justify-content space-between
        flex-basis (740/1180*100)%
        height auto
        padding-left .5%
        @media screen and (max-width: 1440px) {
            flex-basis 60%
        }
    }
    &__title {
        font-family $Roboto
        font-weight 700
        font-size $textMd
        line-height 40px
        color #FFFFFF
        margin 0
        @media screen and (max-width: 1440px) {
            font-size @font-size - 4px
            line-height 22px
        }
    }
    &__subtitle {
        font-family $SSP
        font-weight 400
        font-size $textXs
        line-height $textXs + 8px
        color rgba(255, 255, 255, 0.8)
        margin 0
        @media screen and (max-width: 1440px) {
            font-size @font-size - 2px
            line-height @line-height - 8px
            margin-top 6px
        }
    }
    &__buttons {
        flex-basis (440/1180*100)%
        display flex
        justify-content flex-end
        @media screen and (max-width: 1440px) {
            flex-basis 40%
        }
    }
    &__button {
        width 210px
        @media screen and (max-width: 1440px) {
            width 170px
        }
    }
    &__button_icon_download {
        background linear-gradient(0deg, #FFFFFF, #FFFFFF), $mainPink
        color $mainPink
        padding-left 5%
        padding-top .9em
        border none
        position relative
        &:before {
            content ''
            width 1.2em
            height @width 
            background url('/assets/img/button_for_download.png') center center no-repeat
            background-size contain
            position absolute
            left 17%
            top 28%
            @media screen and (max-width: 1200px) {
                left 8%
            }
        }
        @media screen and (max-width: 1440px) {
            padding-left 6%
        }
    }
    &__button_done {
        margin-left 4%
        border 1px solid #FFFFFF
    }
}